<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title><%= product.title %> Product Details</title>

    <!-- Favicon  -->
    <link rel="icon" href="../static/amado/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="../static/amado/css/core-style.css">
    <link rel="stylesheet" href="../static/amado/style.css">

</head>

<body>
    <!-- Search Wrapper Area Start -->
    <div class="search-wrapper section-padding-100">
        <div class="search-close">
            <i class="fa fa-close" aria-hidden="true"></i>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="search-content">
                        <form action="#" method="get">
                            <input type="search" name="search" id="search" placeholder="Type your keyword...">
                            <button type="submit"><img src="../static/amado/img/core-img/search.png" alt=""></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Search Wrapper Area End -->

    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">

        <!-- Mobile Nav (max width 767px)-->
        <div class="mobile-nav">
            <!-- Navbar Brand -->
            <div class="amado-navbar-brand">
                <a href="index.html"><img src="../static/amado/img/core-img/logo.png" alt=""></a>
            </div>
            <!-- Navbar Toggler -->
            <div class="amado-navbar-toggler">
                <span></span><span></span><span></span>
            </div>
        </div>

        <!-- Header Area Start -->
        <header class="header-area clearfix">
            <!-- Close Icon -->
            <div class="nav-close">
                <i class="fa fa-close" aria-hidden="true"></i>
            </div>
            <!-- Logo -->
            <div class="logo">
                <a href="index.html"><img src="../static/amado/img/core-img/logo.png" alt=""></a>
            </div>
            <!-- Amado Nav -->
            <nav class="amado-nav">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li><a href="shop.html">Shop</a></li>
                    <li class="active"><a href="product-details.html">Product</a></li>
                    <li><a href="cart.html">Cart</a></li>
                    <li><a href="checkout.html">Checkout</a></li>
                </ul>
            </nav>
            <!-- Button Group -->
            <div class="amado-btn-group mt-30 mb-100">
                <a href="#" class="btn amado-btn mb-15">%Discount%</a>
                <a href="#" class="btn amado-btn active">New this week</a>
            </div>
            <!-- Cart Menu -->
            <div class="cart-fav-search mb-100">
                <a href="cart.html" class="cart-nav"><img src="img/core-img/cart.png" alt=""> Cart <span>(0)</span></a>
                <a href="#" class="fav-nav"><img src="img/core-img/favorites.png" alt=""> Favourite</a>
                <a href="#" class="search-nav"><img src="img/core-img/search.png" alt=""> Search</a>
            </div>
            <!-- Social Button -->
            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </header>
        <!-- Header Area End -->

        <!-- Product Details Area Start -->
        <div class="single-product-area section-padding-100 clearfix">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mt-50">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item"><a href="#"><%= product.category.title %></a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%= product.title %></li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-7">
                        <div class="single_product_thumb">
                            <div id="product_details_slider" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li class="active" data-target="#product_details_slider" data-slide-to="0" style="background-image: url(img/product-img/pro-big-1.jpg);">
                                    </li>
                                    <li data-target="#product_details_slider" data-slide-to="1" style="background-image: url(img/product-img/pro-big-2.jpg);">
                                    </li>
                                    <li data-target="#product_details_slider" data-slide-to="2" style="background-image: url(img/product-img/pro-big-3.jpg);">
                                    </li>
                                    <li data-target="#product_details_slider" data-slide-to="3" style="background-image: url(img/product-img/pro-big-4.jpg);">
                                    </li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <a class="gallery_img" href="../static/amado/img/product-img/pro-big-1.jpg">
                                            <img class="d-block w-100" src="/<%= product.imageUrl %>" alt="First slide">
                                        </a>
                                    </div>
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="../static/amado/img/product-img/pro-big-2.jpg">
                                            <img class="d-block w-100" src="/<%= product.imageUrl %>" alt="Second slide">
                                        </a>
                                    </div>
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="../static/amado/img/product-img/pro-big-3.jpg">
                                            <img class="d-block w-100" src="/<%= product.imageUrl %>" alt="Third slide">
                                        </a>
                                    </div>
                                    <div class="carousel-item">
                                        <a class="gallery_img" href="../static/amado/img/product-img/pro-big-4.jpg">
                                            <img class="d-block w-100" src="/<%= product.imageUrl %>" alt="Fourth slide">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-5">
                        <div class="single_product_desc">
                            <!-- Product Meta Data -->
                            <div class="product-meta-data">
                                <div class="line"></div>
                                <p class="product-price">Rate Per Unit Rs: <%= product.price %></p>

                                <a href="product-details.html">
                                    <h6><%= product.title %></h6>
                                    <p style="font-size: 24px; font-weight: 400; color: #fbb710; line-height: 1;">Available Quantaty: <%= product.availableQuantity %></p>

                                <!-- Ratings & Review -->

                                <!-- Avaiable -->
                                <p class="avaibility"><i class="fa fa-circle"></i> In Stock</p>

                            </div>
                            <p >Posted By: <a style="font-size: 24px; font-weight: 400; color: #242424; line-height: 1;" href="/profile/<%= product.postedBy._id %>"><%= product.postedBy.name %></a></p>
                          </a></p>

                            <div class="short_overview my-5">
                              <% if(canEdit || isAdmin){ %>
                                <a class="btn amado-btn" href="/edit-product/<%= product._id %>"> Edit</a>
                                <a class="btn amado-btn" href="/delete-product/<%= product._id %>"> Delete</a>
                              <%}%>
                              <% if(isLogin){ %>
                                  <% if(!isAdded){ %>
                                      <br>
                                      <script>
                                        function getInputValue(){
                                            let quantity = document.getElementById("quantity").value;
                                            if(quantity<=0){
                                                alert("Quantaty Should be more than 0");
                                                return;
                                            }
                                            let url = "/add-to-cart/<%= product._id %>/";
                                            // let url = "#";
                                            url += quantity;
                                            document.getElementById("url").setAttribute("href", url);
                                            // console.log(document.getElementById("url").getAttribute("href"))
                                            //TODO can be implemented in better ways :) Probably
                                        }
                                    </script>
                                    <p style="width:50px">  
                                        Quantity: <input onfocusout="getInputValue()" type="number" value="1" id="quantity">
                                    </p>
                                          <br>
                                      <!-- <a id = "url2"  href="/add-to-cart/<%= product._id %>/" onclick="getInputValue();">Add to cart</a> -->
                                      <a id="url" class="btn amado-btn" href="/add-to-cart/<%= product._id %>/1">Add to cart</a>
                                  <%} else {%>
                                    <br>
                                    <br>
                                      <a class="btn amado-btn disabled" href="">Already in cart</a>
                                  <% } %>
                              <%} else {%>
                                    <br>
                                  <a class="btn amado-btn" href="/login">Log In to Add to cart</a>
                              <% } %>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Product Details Area End -->
    </div>
    <!-- ##### Main Content Wrapper End ##### -->

    <!-- ##### Newsletter Area Start ##### -->
    <section class="newsletter-area section-padding-100-0">
        
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-8">
                    <div class="single_widget_area">
                        <!-- Footer Menu -->

                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ##### Footer Area End ##### -->

    <!-- ##### jQuery (Necessary for All JavaScript Plugins) ##### -->
    <script src="../static/amado/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="../static/amado/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="../static/amado/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="../static/amado/js/plugins.js"></script>
    <!-- Active js -->
    <script src="../static/amado/js/active.js"></script>

</body>

</html>
