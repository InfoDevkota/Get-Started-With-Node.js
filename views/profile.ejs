<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Profile</title>
</head>
<body>
    <h1 style="text-align:center"><%= user.name %></h1>
  <h3 style="text-align:center">  Name: <%= user.name %> <br>
    Address: <%= user.address %> <br>
    Phone no: <%= user.phoneNo %> <br>
</h5>
    <h2 style="text-align:center">Products by <%= user.name %></h2>
    <ul>
            <% if(products){
                if(products.length>0){
                    for(let product of products){ %>
                        <li style="text-align:center">
                            <h3 style="text-align:center"><%= product.title %></h3>
                            <img src="/<%= product.imageUrl %>" alt=""><br>
                            <% if(product.category){ %>
                                Category: <%= product.category.title %> <br>
                            <%}%>
                            <a href="/product/<%= product._id %>">Details</a>
                            <!-- <a href="/edit-product/<%= product._id %>">Edit</a> -->
                        </li>
                    <%}
                }
             } %>
        </ul>
</body>
</html>
